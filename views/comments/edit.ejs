<%- include ("../partials/header") %>

<div class="container">
	<h2 class="text-center">Edit comment</h2>
	<div class="bind">
		<form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<textarea class="form-control" id="desc" name="comment[text]" placeholder="Write Comment" required><%= comment.text %></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-success btn-default btn-block">Submit!</button>
			</div>
		</form>
		<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Go Back!</a>
	</div>
	
</div>


<%- include ("../partials/footer") %>